@model List<BasicBlogWithAdminPanel.Models.Post>
    @{
    ViewData["Title"] = L["AllPostsTitle"];
    var role = ViewData["UserRole"] as string;
    }

    <h2>@L["AllPostsTitle"]</h2>

    @foreach (var p in Model)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title mb-1">@p.Title</h5>
            <small class="text-muted">
                @p.Author • @p.CreatedAt.ToString("dd.MM.yyyy HH:mm")
            </small>

            <p class="mt-2">@p.Content</p>

            @* ─── akcje na poście ───────────────────────────────────── *@
            @if (role == "Admin" ||
                p.Author.Equals(User.Identity!.Name, StringComparison.OrdinalIgnoreCase))
            {
            <a asp-action="Edit"
               asp-route-id="@p.Id"
               class="btn btn-link p-0 me-2"
               title="Edit">✏️</a>

            <form asp-action="Delete"
                  asp-route-id="@p.Id"
                  method="post"
                  class="d-inline">
                @Html.AntiForgeryToken()
                <button class="btn btn-link p-0 text-danger"
                        title="Delete post">
                    🗑️
                </button>
            </form>
            }

            <hr />

            @* ─── komentarze ────────────────────────────────────────── *@
            @foreach (var c in p.Comments)
            {
            <div class="mb-2 d-flex justify-content-between">
                <div>
                    <strong>@c.Author</strong>:
                    @c.Content
                    <small class="text-muted">
                        (@c.CreatedAt.ToString("dd.MM.yyyy HH:mm"))
                    </small>
                </div>

                @if (role == "Admin")
                    {
                <form asp-action="DeleteComment"
                      asp-route-id="@c.Id"
                      method="post"
                      class="ms-2">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-link p-0 text-danger"
                            title="Delete comment">
                        🗑️
                    </button>
                </form>
                    }
            </div>
            }

            @* ─── dodaj komentarz ───────────────────────────────────── *@
            <form asp-action="AddComment"
                  method="post"
                  class="d-flex gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="postId" value="@p.Id" />
                <input name="content"
                       class="form-control"
                       placeholder="Add a comment…" required />
                <button class="btn btn-primary">Reply</button>
            </form>
        </div>
    </div>
}
