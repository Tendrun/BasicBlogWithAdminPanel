@{
    ViewData["Title"] = L["LoginTitle"];

    // Was the user just redirected here from a successful registration?
    var justRegistered = TempData["RegistrationSuccess"] is true;
}

<!-- ───────────────────────  success toast  ──────────────────────────── -->
@if (justRegistered)
{
<div class="toast text-bg-success border-0 position-fixed top-0 end-0 m-3 show"
     role="alert" aria-live="assertive" aria-atomic="true"
     id="registerToast" data-bs-autohide="false">
    <!-- ← keep visible -->
    <div class="d-flex">
        <div class="toast-body">
            @L["RegisterSuccessBody"]   <!-- “You have successfully registered! 🎉” -->
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto"
                data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
}

<!-- ────────────────────────  login form  ────────────────────────────── -->
<h1 class="mb-4">@L["LoginTitle"]</h1>

<form asp-action="Login" method="post" class="w-50">
    <div class="mb-3">
        <label class="form-label">@L["Email"]</label>
        <input type="email" name="email" class="form-control" required />
    </div>

    <div class="mb-4">
        <label class="form-label">@L["Password"]</label>
        <input type="password" name="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">@L["LoginBtn"]</button>
</form>
